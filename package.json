{
  "name": "presentable",
  "version": "0.3.1",
  "description": "Easily create formatted code snippets for presentations",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "bin": "lib/cli.js",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "docs/",
    "lib/"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "format": "eslint --fix . && prettier --write src/**/*.ts",
    "lint": "eslint . && prettier --check src/**/*.ts",
    "prestart": "npm run build",
    "start": "node lib/cli.js",
    "test": "node --import ./tsNode.js --test src/*.test.ts",
    "test-clean": "rm -rf tmp/test-*",
    "test-snippet": "NODE_OPTIONS=--experimental-vm-modules jest snippets"
  },
  "jest": {
    "transform": {}
  },
  "prettier": {
    "useTabs": true
  },
  "engines": {
    "node": ">=20.16"
  },
  "keywords": [],
  "author": "Jonathan Sharpe <mail@jonrshar.pe>",
  "funding": "https://ko-fi.com/textbook",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/textbook/presentable.git"
  },
  "bugs": {
    "url": "https://github.com/textbook/presentable/issues"
  },
  "homepage": "https://github.com/textbook/presentable#readme",
  "dependencies": {
    "highlight.js": "^11.11.1",
    "prettier": "^3.8.0",
    "puppeteer": "^24.35.0"
  },
  "type": "module",
  "devDependencies": {
    "@codeyourfuture/eslint-config-standard": "^6.0.1",
    "@tsconfig/node20": "^20.1.8",
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.30",
    "axios": "^1.13.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "express": "^4.22.1",
    "globals": "^15.15.0",
    "happy-dom": "^16.8.1",
    "jest": "^29.7.0",
    "tesseract.js": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1"
  }
}
