{
  "name": "presentable",
  "version": "0.3.1",
  "description": "Easily create formatted code snippets for presentations",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "bin": "lib/cli.js",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "docs/",
    "lib/"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "format": "prettier --write src/**/*.ts",
    "lint": "prettier --check src/**/*.ts",
    "prestart": "npm run build",
    "start": "node lib/cli.js",
    "test-snippet": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "jest": {
    "transform": {}
  },
  "prettier": {
    "useTabs": true
  },
  "engines": {
    "node": ">=20.16"
  },
  "keywords": [],
  "author": "Jonathan Sharpe <mail@jonrshar.pe>",
  "funding": "https://ko-fi.com/textbook",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/textbook/presentable.git"
  },
  "bugs": {
    "url": "https://github.com/textbook/presentable/issues"
  },
  "homepage": "https://github.com/textbook/presentable#readme",
  "dependencies": {
    "highlight.js": "^11.11.1",
    "prettier": "^3.4.2",
    "puppeteer": "^24.1.0"
  },
  "type": "module",
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.14",
    "axios": "^1.7.9",
    "express": "^4.21.2",
    "jest": "^29.7.0",
    "typescript": "^5.7.3"
  }
}
